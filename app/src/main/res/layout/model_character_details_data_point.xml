<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/characterOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:textSize="26sp"
        android:text="Origin"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/characterOriginResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Earth"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@id/characterOrigin"
        app:layout_constraintTop_toBottomOf="@+id/characterOrigin" />

    <TextView
        android:id="@+id/characterSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Species"
        android:textSize="26sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/characterOrigin"
        app:layout_constraintTop_toBottomOf="@id/characterOriginResult" />

    <TextView
        android:id="@+id/characterSpeciesResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="human"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@id/characterSpecies"
        app:layout_constraintTop_toBottomOf="@+id/characterSpecies" />

</androidx.constraintlayout.widget.ConstraintLayout>